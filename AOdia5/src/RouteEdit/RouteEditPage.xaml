<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AOdia5.RouteEditPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:AOdia5"
    Title="RouteEditPage">
    <ContentPage.BindingContext>
        <controls:RouteEditPageModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout>
        <HorizontalStackLayout>
            <Label Text="Route Name" />
            <Editor Text="{Binding route.Value.Name.Value}" />
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label Text="Route Color" />
            <Editor Text="{Binding route.Value.color.Value}" />
        </HorizontalStackLayout>
        <ListView Margin="20,5,20,5" ItemsSource="{Binding paths}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <HorizontalStackLayout Margin="0,10,0,0">
                            <Label Text="{Binding pathID}" WidthRequest="150" />
                        </HorizontalStackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </VerticalStackLayout>
</ContentPage>