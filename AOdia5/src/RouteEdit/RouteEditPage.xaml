<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AOdia5.RouteEditPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:colorPicker="clr-namespace:Maui.ColorPicker;assembly=Maui.ColorPicker"
    xmlns:controls="clr-namespace:AOdia5"
    xmlns:inputLayout="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
    Title="RouteEditPage">
    <ContentPage.BindingContext>
        <controls:RouteEditPageModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout>
        <inputLayout:SfTextInputLayout
            Margin="30,10,30,10"
            ContainerType="Outlined"
            Hint="Route name">
            <Entry Text="{Binding route.Value.Name.Value}" />
        </inputLayout:SfTextInputLayout>

        <inputLayout:SfTextInputLayout
            Margin="30,10,30,10"
            ContainerType="Outlined"
            Hint="Route color">
            <Entry Text="{Binding routeColorHtml.Value}" />
        </inputLayout:SfTextInputLayout>

        <ListView Margin="20,5,20,5" ItemsSource="{Binding paths}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <HorizontalStackLayout Margin="0,10,0,0">
                            <Label Text="{Binding pathID}" WidthRequest="150" />
                        </HorizontalStackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </VerticalStackLayout>
</ContentPage>