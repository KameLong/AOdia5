<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AOdia5.RouteEditPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:AOdia5"
    x:Name="page"
    Title="RouteEditPage">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" />
    </Shell.BackButtonBehavior>
    <ScrollView>
        <VerticalStackLayout>
            <controls:KameLongEntry
                x:Name="nameEdit"
                IsSpellCheckEnabled="false"
                Text="{Binding routeName}" />
            <controls:KameLongEntry x:Name="colorEdit" Text="{Binding routeColorStr}" />
            <Rectangle
                BackgroundColor="{Binding routeColor}"
                HeightRequest="20"
                WidthRequest="40" />

            <VerticalStackLayout WidthRequest="300">
                <AbsoluteLayout
                    Margin="10,0,0,0"
                    HeightRequest="30"
                    HorizontalOptions="Start"
                    WidthRequest="30">
                    <Ellipse
                        AbsoluteLayout.LayoutBounds="0,0,1,1"
                        AbsoluteLayout.LayoutFlags="All"
                        Fill="White"
                        Stroke="mediumpurple"
                        StrokeThickness="4" />
                    <Line
                        Stroke="mediumpurple"
                        StrokeThickness="2"
                        X1="15"
                        X2="15"
                        Y1="5"
                        Y2="25" />
                    <Line
                        Stroke="mediumpurple"
                        StrokeThickness="2"
                        X1="5"
                        X2="25"
                        Y1="15"
                        Y2="15" />
                </AbsoluteLayout>

            </VerticalStackLayout>
            <CollectionView
                Margin="20,0,20,5"
                ItemsSource="{Binding Stations}"
                SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout WidthRequest="300">
                            <Line
                                HorizontalOptions="Start"
                                Stroke="Black"
                                StrokeThickness="2"
                                X1="25"
                                X2="25"
                                Y1="0"
                                Y2="15" />

                            <HorizontalStackLayout>
                                <AbsoluteLayout HeightRequest="50" WidthRequest="50">
                                    <Rectangle
                                        AbsoluteLayout.LayoutBounds="0,0,1,1"
                                        AbsoluteLayout.LayoutFlags="All"
                                        Fill="White"
                                        Stroke="Gray"
                                        StrokeThickness="4" />
                                    <Label
                                        AbsoluteLayout.LayoutBounds="0,0,1,1"
                                        AbsoluteLayout.LayoutFlags="All"
                                        FontSize="20"
                                        HorizontalOptions="Center"
                                        Text="10"
                                        VerticalOptions="Center" />

                                </AbsoluteLayout>
                                <Label
                                    Margin="10,0,0,0"
                                    FontSize="20"
                                    Text="{Binding name}"
                                    VerticalOptions="Center" />

                            </HorizontalStackLayout>
                            <Line
                                HorizontalOptions="Start"
                                Stroke="Black"
                                StrokeThickness="2"
                                WidthRequest="30"
                                X1="25"
                                X2="25"
                                Y1="0"
                                Y2="15" />

                            <AbsoluteLayout
                                Margin="10,0,0,0"
                                HeightRequest="30"
                                HorizontalOptions="Start"
                                WidthRequest="30">
                                <AbsoluteLayout.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="AddStation" />
                                </AbsoluteLayout.GestureRecognizers>

                                <Ellipse
                                    AbsoluteLayout.LayoutBounds="0,0,1,1"
                                    AbsoluteLayout.LayoutFlags="All"
                                    Stroke="mediumpurple"
                                    StrokeThickness="2" />
                                <Line
                                    Stroke="mediumpurple"
                                    StrokeThickness="2"
                                    X1="15"
                                    X2="15"
                                    Y1="5"
                                    Y2="25" />
                                <Line
                                    Stroke="mediumpurple"
                                    StrokeThickness="2"
                                    X1="5"
                                    X2="25"
                                    Y1="15"
                                    Y2="15" />
                            </AbsoluteLayout>
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>

            <!--<CollectionView
                x:Name="stationList"
                Margin="20,5,20,5"
                ItemsSource="{Binding Paths}"
                SelectionMode="None">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout WidthRequest="200">
                            <HorizontalStackLayout Margin="0,10,0,0">

                                <Label Text="{Binding startStation.Name}" WidthRequest="150" />
                                <Button
                                    Clicked="DeleteStation"
                                    Text="ðŸš®"
                                    WidthRequest="50" />
                            </HorizontalStackLayout>
                            <Button
                                Clicked="AddStation"
                                HorizontalOptions="Center"
                                Text="+" />
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>-->




        </VerticalStackLayout>
    </ScrollView>
</ContentPage>