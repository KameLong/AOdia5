<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="AOdia5.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:helpers="clr-namespace:AOdia5.Helpers"
    xmlns:local="clr-namespace:AOdia5">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">

            <Label
                FontSize="32"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level1"
                Text="路線の作成方法" />
            <Label
                FontSize="32"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level1"
                Text="①駅を追加します" />
            <Label
                FontSize="32"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level1"
                Text="②路線を作成します" />
            <Label
                FontSize="32"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level1"
                Text="③路線に駅を追加します" />

            <Button HorizontalOptions="Center" Text="Route" />
            <Button HorizontalOptions="Center" Text="Station" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>


