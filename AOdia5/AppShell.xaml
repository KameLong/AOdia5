<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AOdia5.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AOdia5"
    Shell.FlyoutBehavior="Locked">
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="main" />
    <ShellContent
        Title="Routes"
        ContentTemplate="{DataTemplate local:RouteListPage}"
        Route="route" />
    <ShellContent
        ContentTemplate="{DataTemplate local:RouteEditPage}"
        FlyoutItemIsVisible="False"
        Route="routeEdit" />
    <ShellContent
        Title="Stationes"
        ContentTemplate="{DataTemplate local:StationListPage}"
        Route="station" />

</Shell>
